{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "tslint --project tsconfig.json -t verbose",
    "typecheck": "ttsc --noEmit",
    "torm": "ts-node -C ttypescript ./node_modules/typeorm/cli.js",
    "db:migrate": "yarn torm migration:run",
    "test": "jest .",
    "start": "yarn db:migrate && ts-node -C ttypescript index.ts",
    "start:w": "nodemon",
    "docker:dev.run": "docker-compose -f devops/docker/dev.docker-compose.yml -p test run -d -p 4000:4000 --name majestic test",
    "docker:dev.down": "docker-compose -f devops/docker/dev.docker-compose.yml -p test down",
    "docker:dev": "yarn docker:dev.down && yarn docker:dev.run",
    "docker:dev:attach": "docker exec -it $(grep -Eo '[0-9a-z]{12}' < <(docker ps | grep majestic)) /bin/sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "class-validator-jsonschema": "^2.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "inversify": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "pg": "^8.0.3",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.1",
    "routing-controllers-openapi": "^2.0.0",
    "short-uuid": "^3.1.1",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.24",
    "typeorm-routing-controllers-extensions": "^0.2.0",
    "typescript": "^3.8.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/helmet": "^0.0.46",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/lodash": "^4.14.150",
    "@types/morgan": "^1.9.0",
    "@types/multer": "^1.4.3",
    "@types/node": "^13.13.5",
    "@types/random": "^2.1.1",
    "@types/swagger-ui-express": "^4.1.2",
    "@zerollup/ts-transform-paths": "^1.7.17",
    "axios": "^0.21.1",
    "axiosist": "^0.9.0",
    "jest": "^26.0.1",
    "jest-cucumber": "^2.0.11",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "prettier-tslint": "^0.4.2",
    "random": "^2.2.0",
    "serve": "^11.3.0",
    "ts-jest": "^25.5.0",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "tslint-config-standard": "^9.0.0",
    "ttypescript": "^1.5.10"
  },
  "jest": {
    "verbose": true,
    "bail": false,
    "preset": "ts-jest",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "node"
    ],
    "testRegex": "/.*\\.(unit)|(bdd)\\.[jt]s$",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/devops/jest/setupFilesAfterEnv.js"
    ],
    "moduleNameMapper": {
      "#/(.*)": "<rootDir>/src/$1"
    }
  }
}
